{
  "name": "@concords/core",
  "version": "2.0.0",
  "description": "An immutable Javascript data ledger",
  "repository": {
    "type": "git",
    "url": "https://github.com/concords/ledger"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/concords-core.cjs.js",
  "module": "dist/concords-core.esm.js",
  "types": "types",
  "files": [
    "/dist",
    "/types"
  ],
  "scripts": {
    "dev": "rollup -c --w",
    "build": "tsc -p tsconfig.json && rollup -c --environment INCLUDE_DEPS,BUILD:production",
    "publish": "standard-version && git push --follow-tags origin main && yarn npm publish"
  }
}
