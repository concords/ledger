{
  "name": "@concords/core",
  "version": "0.4.10",
  "description": "An immutable Javascript data ledger",
  "main": "./builds/core.umd.js",
  "module": "./builds/core.esm.js",
  "exports": {
    ".": {
      "import": "./builds/core.esm.js",
      "require": "./builds/core.umd.js"
    }
  },
  "repository": "git://github.com/teamconcords/core.git",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json -w",
    "test": "ava src/**/*.test.ts",
    "test:watch": "ava src/**/*.test.ts --watch",
    "prepublish": "npm run build-lib",
    "build-lib": "npm run build && rollup --config rollup.config.js",
    "docs": "npm run build && typedoc dist/ledger.ts dist/authentication.ts"
  },
  "author": "team@concords.app",
  "license": "GNU",
  "dependencies": {
    "hyperactiv": "^0.8.4",
    "idb": "^5.0.7",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "ava": "^3.13.0",
    "rollup": "^2.36.2",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typedoc": "^0.20.18",
    "typescript": "^4.1.2"
  }
}
