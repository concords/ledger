{
  "name": "concords",
  "version": "0.0.0",
  "license": "GPL-3.0-or-later",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "identity:dev": "yarn workspace @concords/identity dev",
    "identity:build": "yarn workspace @concords/identity build",
    "core:dev": "yarn workspace @concords/core dev",
    "core:build": "yarn workspace @concords/core build",
    "vue-kit:dev": "yarn workspace @concords/vue-kit dev",
    "vue-kit:build": "yarn workspace @concords/vue-kit build",
    "ledger:build": "yarn workspace @concords/ledger build",
    "ledger:publish": "yarn workspace @concords/ledger publish",
    "build": "yarn identity:build && yarn core:build && yarn ledger:build",
    "test": "jest",
    "typedoc:build": "yarn build && typedoc"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-syntax-flow": "^7.12.13",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-flow": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@commitlint/config-lerna-scopes": "^12.1.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^26.0.22",
    "@vitejs/plugin-vue": "^1.0.4",
    "autoprefixer": "^10.2.1",
    "babel-jest": "^26.6.3",
    "babel-preset-es2015": "^6.24.1",
    "conventional-changelog-atom": "^2.0.8",
    "eslint": "^7.17.0",
    "eslint-plugin-vue": "^7.4.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "postcss": "^8.2.4",
    "resolve": "^1.20.0",
    "rollup": "^2.44.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.1.0",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3",
    "vite": "^2.0.0-beta.12"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "setupFiles": ["./private/jest/setup.js"],
    "collectCoverage": true
  }
}
